<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Post-Event Surveys</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <div class="table-card">
        <h1>Post-Event Surveys</h1>

        <!-- Only show Add button if user is a manager -->
        <% if (isManager) { %>
            <div class="table-actions">
                <button class="btn btn-primary">Add Survey</button>
            </div>
        <% } %>

        <table class="event-table">
            <thead>
                <tr>
                    <th>Event Name</th>
                    <th>Event Date/Time</th>
                    <th>Participant</th>
                    <th>Rating</th>
                    <th>Comments</th>
                    <% if (isManager) { %>
                        <th>Actions</th>
                    <% } %>
                </tr>
            </thead>

            <tbody>
                <% if (surveys && surveys.length > 0) { %>
                    <% surveys.forEach(survey => { %>
                        <tr>
                            <td><%= survey.eventname %></td>
                            <td><%= survey.eventdatetimestart %></td>
                            <td><%= survey.participantname %></td>
                            <td><%= survey.rating %></td>
                            <td><%= survey.comments %></td>

                            <% if (isManager) { %>
                                <td class="actions">
                                    <button class="btn btn-secondary">Edit</button>
                                    <button class="btn btn-danger">Delete</button>
                                </td>
                            <% } %>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="<%= isManager ? 6 : 5 %>" style="text-align:center; padding: 16px;">
                            No surveys found.
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
