<!-- Group 2-11
 
Post Survey page: This is a page that shows surveys that were taken by participants. The
surveys are about each event and can be edited/deleted by admin/managers.

-->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Post-Event Surveys</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <%- include('partials/header') %> 
        <div class="container mt-5">

            <div class="table-header-row">
                <h1 class="mb-4">Surveys</h1>
                <% if (pagination && pagination.totalPages > 1) { %>
                    <% const searchQS = search ? '&search=' + encodeURIComponent(search) : ''; %>
                    <div class="pagination-top">
                        <div class="pagination">
                            <a class="page-link <%= pagination.page === 1 ? 'disabled' : '' %>"
                               href="?page=<%= pagination.page - 1 %><%= searchQS %>">Previous</a>
                            <span class="page-info">Page <%= pagination.page %> of <%= pagination.totalPages %></span>
                            <a class="page-link <%= pagination.page >= pagination.totalPages ? 'disabled' : '' %>"
                               href="?page=<%= pagination.page + 1 %><%= searchQS %>">Next</a>
                        </div>
                    </div>
                <% } %>
            </div>

        <%
            // Determine if user is an admin
            let isManager = (role === 'admin' || role === 'Admin');
        %>

        <!-- Add Survey button (ADMINS ONLY) -->
        <% if (isManager) { %>
            <div class="add-button-bar">
                <a href="/postsurveys/add" class="btn btn-primary">Add Survey</a>
            </div>
        <% } %>

        <!-- SEARCH BAR -->
        <form method="GET" action="/postsurveys" class="mb-3">
            <div class="search-bar-wrapper" style="display: flex; gap: 8px; flex-wrap: wrap; align-items: center;">
                <input 
                    type="text"
                    name="search"
                    class="form-control"
                    placeholder="Search by name, event name, event date, or comments..."
                    value="<%= search %>"
                    style="flex: 1; min-width: 250px; border-radius: 8px; height: 35px; padding: 0 12px;"
                />
                <button class="btn btn-secondary" type="submit">Search</button>
                <button class="btn btn-secondary" type="button" onclick="window.location.href='/postsurveys'">Clear</button>
            </div>
        </form>

        <table class="event-table table-striped">
            <thead>
                <tr>
                    <th>Event Name</th>
                    <th>Event Date/Time</th>
                    <th>Participant</th>
                    <th>Rating</th>
                    <th>Comments</th>

                    <!-- Only show Actions column for admins -->
                    <% if (isManager) { %>
                        <th>Edit</th>
                        <th>Delete</th>
                    <% } %>
                </tr>
            </thead>

            <tbody>
                <% if (surveys && surveys.length > 0) { %>
                    <% surveys.forEach(survey => { %>
                        <tr>
                            <td><%= survey.eventname %></td>
                            <td><%= survey.eventdatetimestart %></td>
                            <td><%= survey.participantname %></td>
                            <td><%= survey.rating %></td>
                            <td><%= survey.comments %></td>

                            <% if (isManager) { %>
                                <td>
                                    <a href="/postsurveys/edit/<%= survey.surveyid %>" class="btn btn-primary btn-sm">
                                        Edit
                                    </a>
                                </td>
                                <td>
                                    <form action="/postsurveys/delete/<%= survey.surveyid %>" method="POST" style="display:inline;">
                                        <button 
                                            class="btn btn-delete" 
                                            type="button"
                                            data-event-name="<%= survey.eventname %>"
                                            data-participant-name="<%= survey.participantname %>"
                                            onclick="openSurveyDeletePopup(this.form, this.dataset.eventName, this.dataset.participantName)">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            <% } %>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="<%= isManager ? 6 : 5 %>" style="text-align:center; padding:20px;">
                            No surveys found.
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <div class="table-footer">
            <div class="footer-left">
                <% if (pagination && pagination.totalPages > 1) { %>
                    <div class="pagination">
                        <a class="page-link <%= pagination.page === 1 ? 'disabled' : '' %>"
                           href="?page=<%= pagination.page - 1 %>">Previous</a>
                        <span class="page-info">Page <%= pagination.page %> of <%= pagination.totalPages %></span>
                        <a class="page-link <%= pagination.page >= pagination.totalPages ? 'disabled' : '' %>"
                           href="?page=<%= pagination.page + 1 %>">Next</a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <div class="simple-overlay" id="survey-delete-popup">
        <div class="simple-dialog">
            <h3>Delete this survey?</h3>
            <p id="survey-delete-text">Are you sure you want to delete this survey?</p>
            <div class="simple-dialog__actions">
                <button type="button" class="btn btn-secondary" onclick="closeSurveyDeletePopup()">Cancel</button>
                <button type="button" class="btn btn-danger" id="survey-confirm-delete">Yes, delete</button>
            </div>
        </div>
    </div>

    <script>
        var pendingSurveyDeleteForm = null;
        var surveyDeletePopup = document.getElementById('survey-delete-popup');
        var surveyDeleteText = document.getElementById('survey-delete-text');
        var surveyConfirmBtn = document.getElementById('survey-confirm-delete');

        function openSurveyDeletePopup(form, eventName, participantName) {
            pendingSurveyDeleteForm = form;
            var eventLabel = (eventName || '').trim();
            var participantLabel = (participantName || '').trim();
            if (surveyDeleteText) {
                if (eventLabel && participantLabel) {
                    surveyDeleteText.textContent = 'Delete survey of "' + eventLabel + '" from "' + participantLabel + '"?';
                } else if (eventLabel) {
                    surveyDeleteText.textContent = 'Delete survey of "' + eventLabel + '"?';
                } else {
                    surveyDeleteText.textContent = 'Are you sure you want to delete this survey?';
                }
            }
            if (surveyDeletePopup) {
                surveyDeletePopup.classList.add('is-visible');
            }
        }

        function closeSurveyDeletePopup() {
            pendingSurveyDeleteForm = null;
            if (surveyDeletePopup) {
                surveyDeletePopup.classList.remove('is-visible');
            }
        }

        if (surveyConfirmBtn) {
            surveyConfirmBtn.addEventListener('click', function() {
                if (pendingSurveyDeleteForm) {
                    pendingSurveyDeleteForm.submit();
                }
                closeSurveyDeletePopup();
            });
        }

        if (surveyDeletePopup) {
            surveyDeletePopup.addEventListener('click', function(e) {
                if (e.target === surveyDeletePopup) {
                    closeSurveyDeletePopup();
                }
            });
        }

        window.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeSurveyDeletePopup();
            }
        });
    </script>
</body>
</html>
