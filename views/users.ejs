<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Users List</title>
        <link rel="stylesheet" href="/styles.css">
    </head>

    <body>
        <%- include('partials/header') %>
        <div class="container mt-5">

            <div class="table-header-row">
                <h1 class="mb-4">Users List</h1>
                <% if (pagination && pagination.totalPages > 1) { %>
                    <% const searchQS = search ? '&search=' + encodeURIComponent(search) : ''; %>
                    <div class="pagination-top">
                        <div class="pagination">
                            <a class="page-link <%= pagination.page === 1 ? 'disabled' : '' %>"
                               href="?page=<%= pagination.page - 1 %><%= searchQS %>">Previous</a>
                            <span class="page-info">Page <%= pagination.page %> of <%= pagination.totalPages %></span>
                            <a class="page-link <%= pagination.page >= pagination.totalPages ? 'disabled' : '' %>"
                               href="?page=<%= pagination.page + 1 %><%= searchQS %>">Next</a>
                        </div>
                    </div>
                <% } %>
            </div>

            <!-- ADMINS SEE ADD BUTTON -->
            <% if (role === "admin") { %>
                <form action="/addUsers" method="GET" class="add-button-bar">
                    <button class="btn btn-primary" type="submit">Add User</button>
                </form>
            <% } %>

            <!-- SEARCH BAR -->
            <form method="GET" action="/users" class="mb-3">
                <div class="search-bar-wrapper" 
                     style="display: flex; gap: 8px; flex-wrap: wrap; align-items: center;">
                    
                    <input 
                        type="text"
                        name="search"
                        class="form-control"
                        placeholder="Search by email, first name, last name..."
                        value="<%= search %>"
                        style="flex: 1; min-width: 250px; border-radius: 8px; height: 35px; padding: 0 12px;"
                    />

                    <button class="btn btn-secondary" type="submit">Search</button>

                    <button 
                        class="btn btn-secondary" 
                        type="button" 
                        onclick="window.location.href='/users'">
                        Clear
                    </button>
                </div>
            </form>

            <!-- ERROR MESSAGE -->
            <% if (error_message) { %>
                <div class="alert alert-danger">
                    <%= error_message %>
                </div>
            <% } %>

            <!-- NO USERS -->
            <% if (users.length === 0) { %>
                <div class="alert alert-warning">
                    No users found in the database.
                </div>
            <% } else { %>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Role</th>

                            <% if (role === "admin") { %>
                                <th>Edit</th>
                                <th>Delete</th>
                            <% } %>
                        </tr>
                    </thead>

                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.participant_email %></td>
                                <td><%= user.participant_first_name %></td>
                                <td><%= user.participant_last_name %></td>
                                <td><%= user.participant_role %></td>

                                <% if (role === "admin") { %>
                                    <td>
                                        <form action="/editUsers/<%= user.participant_id %>" method="GET">
                                            <button class="btn btn-primary btn-sm">Edit</button>
                                        </form>
                                    </td>

                                    <td>
                                        <form action="/deleteUsers/<%= user.participant_id %>" method="POST">
                                            <button class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </td>
                                <% } %>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>

            <div class="table-footer">
                <div class="footer-left">
                    <% if (pagination && pagination.totalPages > 1) { %>
                        <% const searchQS = search ? '&search=' + encodeURIComponent(search) : ''; %>
                        <div class="pagination">
                            <a class="page-link <%= pagination.page === 1 ? 'disabled' : '' %>"
                               href="?page=<%= pagination.page - 1 %><%= searchQS %>">Previous</a>
                            <span class="page-info">Page <%= pagination.page %> of <%= pagination.totalPages %></span>
                            <a class="page-link <%= pagination.page >= pagination.totalPages ? 'disabled' : '' %>"
                               href="?page=<%= pagination.page + 1 %><%= searchQS %>">Next</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </body>
</html>
