<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Users List</title>
        <link rel="stylesheet" href="/styles.css">
    </head>

    <body>
        <div class="container mt-5">

            <h1 class="mb-4">Users List</h1>

            <!-- MANAGERS SEE ADD BUTTON -->
            <% if (role === "manager") { %>
                <form action="/addUser" method="GET" class="mb-3">
                    <button class="btn btn-success" type="submit">Add User</button>
                </form>
            <% } %>

            <!-- ERROR MESSAGE -->
            <% if (error_message) { %>
                <div class="alert alert-danger">
                    <%= error_message %>
                </div>
            <% } %>

            <!-- NO USERS -->
            <% if (users.length === 0) { %>
                <div class="alert alert-warning">
                    No users found in the database.
                </div>
            <% } else { %>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Password</th>
                            <th>Role</th>
                            
                            <!-- Manager-only columns -->
                            <% if (role === "manager") { %>
                                <th>Edit</th>
                                <th>Delete</th>
                            <% } %>

                        </tr>
                    </thead>

                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.username %></td>
                                <td><%= user.password %></td>

                                <td>
                                    <% if (user.profile_image) { %>
                                        <img src="<%= user.profile_image %>" 
                                             alt="Profile picture" 
                                             style="max-width: 100px;">
                                    <% } else { %>
                                        <span>No image</span>
                                    <% } %>
                                </td>

                                <!-- EDIT: Managers only -->
                                <% if (role === "manager") { %>
                                    <td>
                                        <form action="/editUser/<%= user.id %>" method="GET">
                                            <button class="btn btn-primary btn-sm">Edit</button>
                                        </form>
                                    </td>

                                    <!-- DELETE: Managers only -->
                                    <td>
                                        <form action="/deleteUser/<%= user.id %>" method="POST">
                                            <button class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </td>
                                <% } %>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>

            <a href="/" class="btn btn-primary mt-3">Back to Dashboard</a>
            <a href="/logout" class="btn btn-secondary mt-3">Logout</a>
        </div>
    </body>
</html>
