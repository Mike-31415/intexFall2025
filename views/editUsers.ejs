<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/header') %>
    <div class="form-card">
        <h2>Edit User</h2>

        <% if (error_message) { %>
            <div class="error-message"><%= error_message %></div>
        <% } %>

        <form action="/editUsers/<%= user.participant_id %>" method="POST">
            <div class="form-row">
                <label for="participant_email">Email</label>
                <input
                    type="email"
                    id="participant_email"
                    name="participant_email"
                    value="<%= user.participant_email || '' %>"
                    required
                >
            </div>

            <div class="form-row">
                <label for="participant_first_name">First Name</label>
                <input
                    type="text"
                    id="participant_first_name"
                    name="participant_first_name"
                    value="<%= user.participant_first_name || '' %>"
                    required
                >
            </div>

            <div class="form-row">
                <label for="participant_last_name">Last Name</label>
                <input
                    type="text"
                    id="participant_last_name"
                    name="participant_last_name"
                    value="<%= user.participant_last_name || '' %>"
                    required
                >
            </div>

            <div class="form-row">
                <label for="participant_role">Role</label>
                <select id="participant_role" name="participant_role">
                    <option value="participant" <%= (user.participant_role || '') === 'participant' ? 'selected' : '' %>>Participant</option>
                    <option value="admin" <%= (user.participant_role || '') === 'admin' ? 'selected' : '' %>>Admin</option>
                </select>
            </div>

            <div class="form-row">
                <label for="password">Password</label>
                <input
                    type="password"
                    id="password"
                    name="password"
                    placeholder="Leave blank to keep current password"
                >
            </div>

            <div class="buttons">
                <button type="submit" class="btn btn-save">Update User</button>
                <a href="/users" class="btn btn-cancel">Cancel</a>
            </div>
        </form>
    </div>
</body>
</html>
