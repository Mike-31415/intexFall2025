<!-- Group 2-11
 
Participants page: This page shows a list of all the participants and their
information (name, DOB, phone, city, etc). Admin/Managers can edit and delete.

-->

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Participants List</title>
        <link rel="stylesheet" href="/styles.css">
    </head>

    <body>
        <%- include('partials/header') %>
        <div class="container mt-5">

            <div class="table-header-row">
                <h1 class="mb-4">Participants List</h1>
                <% if (pagination && pagination.totalPages > 1) { %>
                    <% const searchQS = search ? '&search=' + encodeURIComponent(search) : ''; %>
                    <div class="pagination-top">
                        <div class="pagination">
                            <a class="page-link <%= pagination.page === 1 ? 'disabled' : '' %>"
                               href="?page=<%= pagination.page - 1 %><%= searchQS %>">Previous</a>
                            <span class="page-info">Page <%= pagination.page %> of <%= pagination.totalPages %></span>
                            <a class="page-link <%= pagination.page >= pagination.totalPages ? 'disabled' : '' %>"
                               href="?page=<%= pagination.page + 1 %><%= searchQS %>">Next</a>
                        </div>
                    </div>
                <% } %>
            </div>

            <!-- ADMINS SEE ADD BUTTON -->
            <% if (role === "admin") { %>
                <form action="/addParticipants" method="GET" class="add-button-bar">
                    <button class="btn btn-primary" type="submit">Add Participant</button>
                </form>
            <% } %>

            <!-- SEARCH BAR -->
            <form method="GET" action="/participants" class="mb-3">
                <div class="search-bar-wrapper" style="display: flex; gap: 8px; flex-wrap: wrap; align-items: center;">
                    <input 
                        type="text"
                        name="search"
                        class="form-control"
                        placeholder="Search by name, email, city, state, school, or DOB..."
                        value="<%= search %>"
                        style="flex: 1; min-width: 250px; border-radius: 8px; height: 35px; padding: 0 12px;"
                    />
                    <button class="btn btn-secondary" type="submit">Search</button>
                    <button class="btn btn-secondary" type="button" onclick="window.location.href='/participants'">Clear</button>
                </div>
            </form>


            <!-- ERROR MESSAGE -->
            <% if (error_message) { %>
                <div class="alert alert-danger">
                    <%= error_message %>
                </div>
            <% } %>

            <!-- NO PARTICIPANTS -->
            <% if (participants.length === 0) { %>
                <div class="alert alert-warning">
                    No participants found in the database.
                </div>
            <% } else { %>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>DOB</th>
                            <th>Phone</th>
                            <th>City</th>
                            <th>State</th>
                            <th>Zip</th>
                            <th>School or Employer</th>
                            <th>Field of Interest</th>
                            <th>View</th>
                            
                            <!-- Admin-only columns -->
                            <% if (role === "admin") { %>
                                <th>Edit</th>
                                <th>Delete</th>
                            <% } %>

                        </tr>
                    </thead>

                    <tbody>
                        <% participants.forEach(participant => { %>
                            <tr>
                                <td><%= participant.participant_first_name %></td>
                                <td><%= participant.participant_last_name %></td>
                                <td>
                                    <%= participant.participant_dob ? new Date(participant.participant_dob).toISOString().split('T')[0] : '' %>
                                </td>
                                <td><%= participant.participant_phone %></td>
                                <td><%= participant.participant_city %></td>
                                <td><%= participant.participant_state %></td>
                                <td><%= participant.participant_zip %></td>
                                <td><%= participant.participant_school_or_employer %></td>
                                <td><%= participant.participant_field_of_interest %></td>
                                <td>
                                    <form action="/viewParticipants/<%= participant.participant_id %>" method="GET">
                                        <button class="btn btn-secondary btn-sm">View</button>
                                    </form>
                                </td>

                                <!-- EDIT: Admins only -->
                                <% if (role === "admin") { %>
                                    <td>
                                        <form action="/editParticipants/<%= participant.participant_id %>" method="GET">
                                            <button class="btn btn-primary btn-sm">Edit</button>
                                        </form>
                                    </td>

                                    <!-- DELETE: Admins only -->
                                    <td>
                                        <form action="/deleteParticipants/<%= participant.participant_id %>" method="POST">
                                            <button 
                                                type="button" 
                                                class="btn btn-danger btn-sm"
                                                data-name="<%= participant.participant_first_name + ' ' + participant.participant_last_name %>"
                                                onclick="openDeletePopup(this.form, this.dataset.name)">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                <% } %>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>

            <div class="table-footer">
                <div class="footer-left">
                    <% if (pagination && pagination.totalPages > 1) { %>
                        <% const searchQS = search ? '&search=' + encodeURIComponent(search) : ''; %>
                        <div class="pagination">
                            <a class="page-link <%= pagination.page === 1 ? 'disabled' : '' %>"
                               href="?page=<%= pagination.page - 1 %><%= searchQS %>">Previous</a>
                            <span class="page-info">Page <%= pagination.page %> of <%= pagination.totalPages %></span>
                            <a class="page-link <%= pagination.page >= pagination.totalPages ? 'disabled' : '' %>"
                               href="?page=<%= pagination.page + 1 %><%= searchQS %>">Next</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="simple-overlay" id="delete-popup">
            <div class="simple-dialog">
                <h3>Delete this participant?</h3>
                <p id="delete-popup-text">This will also remove all associated milestones, registrations, and surveys.</p>
                <div class="simple-dialog__actions">
                    <button type="button" class="btn btn-secondary" onclick="closeDeletePopup()">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirm-delete-btn">Yes, delete</button>
                </div>
            </div>
        </div>

        <script>
            var pendingDeleteForm = null;
            var deletePopup = document.getElementById('delete-popup');
            var deletePopupText = document.getElementById('delete-popup-text');
            var confirmDeleteBtn = document.getElementById('confirm-delete-btn');

            function openDeletePopup(form, displayName) {
                pendingDeleteForm = form;
                var name = (displayName || '').trim();
                if (deletePopupText) {
                    deletePopupText.textContent = name
                        ? 'Delete ' + name + '? This will also remove all associated milestones, registrations, and surveys.'
                        : 'This will also remove all associated milestones, registrations, and surveys.';
                }
                if (deletePopup) {
                    deletePopup.classList.add('is-visible');
                }
            }

            function closeDeletePopup() {
                pendingDeleteForm = null;
                if (deletePopup) {
                    deletePopup.classList.remove('is-visible');
                }
            }

            if (confirmDeleteBtn) {
                confirmDeleteBtn.addEventListener('click', function() {
                    if (pendingDeleteForm) {
                        pendingDeleteForm.submit();
                    }
                    closeDeletePopup();
                });
            }

            if (deletePopup) {
                deletePopup.addEventListener('click', function(e) {
                    if (e.target === deletePopup) {
                        closeDeletePopup();
                    }
                });
            }

            window.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    closeDeletePopup();
                }
            });
        </script>
    </body>
</html>
