<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit Participant</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/header') %>
    <div class="form-card">
        <h2>Edit Participant</h2>

        <% if (typeof error_message !== 'undefined' && error_message) { %>
            <div class="error-message"><%= error_message %></div>
        <% } %>

        <% 
            let dobVal = participant.participant_dob || "";
            if (dobVal) {
                const d = new Date(dobVal);
                if (!isNaN(d)) {
                    dobVal = d.toISOString().slice(0,10);
                }
            }
        %>

        <form action="/editParticipants/<%= participant.participant_id %>" method="post">
            <div class="form-row">
                <label for="participant_email">Email</label>
                <input type="email" id="participant_email" name="participant_email" value="<%= participant.participant_email %>" required readonly>
            </div>

            <div class="form-row">
                <label for="participant_first_name">First Name</label>
                <input type="text" id="participant_first_name" name="participant_first_name" value="<%= participant.participant_first_name %>" required>
            </div>

            <div class="form-row">
                <label for="participant_last_name">Last Name</label>
                <input type="text" id="participant_last_name" name="participant_last_name" value="<%= participant.participant_last_name %>" required>
            </div>

            <div class="form-row">
                <label for="participant_dob">Date of Birth</label>
                <input type="date" id="participant_dob" name="participant_dob" value="<%= dobVal %>">
            </div>

            <div class="form-row">
                <label for="participant_phone">Phone</label>
                <input type="text" id="participant_phone" name="participant_phone" value="<%= participant.participant_phone %>">
            </div>

            <div class="form-row">
                <label for="participant_city">City</label>
                <input type="text" id="participant_city" name="participant_city" value="<%= participant.participant_city %>">
            </div>

            <div class="form-row">
                <label for="participant_state">State</label>
                <input type="text" id="participant_state" name="participant_state" value="<%= participant.participant_state %>">
            </div>

            <div class="form-row">
                <label for="participant_zip">Zip</label>
                <input type="text" id="participant_zip" name="participant_zip" value="<%= participant.participant_zip %>">
            </div>

            <div class="form-row">
                <label for="participant_school_or_employer">School or Employer</label>
                <input type="text" id="participant_school_or_employer" name="participant_school_or_employer" value="<%= participant.participant_school_or_employer %>">
            </div>

            <div class="form-row">
                <label>Field of Interest</label>
                <div>
                    <input type="radio" id="interest_arts" name="participant_field_of_interest" value="Arts" <%= (participant.participant_field_of_interest === 'Arts') ? 'checked' : '' %>>
                    <label for="interest_arts">Arts</label>
                </div>
                <div>
                    <input type="radio" id="interest_stem" name="participant_field_of_interest" value="STEM" <%= (participant.participant_field_of_interest === 'STEM') ? 'checked' : '' %>>
                    <label for="interest_stem">STEM</label>
                </div>
                <div>
                    <input type="radio" id="interest_both" name="participant_field_of_interest" value="Both" <%= (participant.participant_field_of_interest === 'Both') ? 'checked' : '' %>>
                    <label for="interest_both">Both</label>
                </div>
            </div>

            <div class="buttons">
                <button type="submit" class="btn btn-save">Update Participant</button>
                <a href="/participants" class="btn btn-cancel">Cancel</a>
            </div>
        </form>
    </div>
</body>
</html>
