<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit Event</title>
    <link rel="stylesheet" href="/styles.css">    
</head>

<body>
    <%- include('partials/header') %>
    <div class="form-card">
        <h2>Edit Event</h2>

        <% if (error_message) { %>
            <div class="error-message"><%= error_message %></div>
        <% } %>

        <form action="/events/edit/<%= event.eventid %>" method="POST">
            <div class="form-row">
                <label for="eventname">Event Name</label>
                <input type="text" id="eventname" name="eventname" value="<%= event.eventname %>" required>
            </div>

            <div class="form-row">
                <label for="eventtype">Event Type</label>
                <input type="text" id="eventtype" name="eventtype" value="<%= event.eventtype %>" required>
            </div>

            <div class="form-row">
                <label for="eventdescription">Description</label>
                <textarea id="eventdescription" name="eventdescription" required><%= event.eventdescription %></textarea>
            </div>

            <div class="form-row">
                <label for="eventrecurrencepattern">Recurrence Pattern</label>
                <input type="text" id="eventrecurrencepattern" name="eventrecurrencepattern" value="<%= event.eventrecurrencepattern %>" required>
            </div>

            <div class="form-row">
                <label for="eventdefaultcapacity">Default Capacity</label>
                <input type="number" id="eventdefaultcapacity" name="eventdefaultcapacity" value="<%= event.eventdefaultcapacity %>" min="0" required>
            </div>

            <div class="buttons">
                <button type="submit" class="btn btn-save">Save Changes</button>
                <a href="/events" class="btn btn-cancel">Cancel</a>
            </div>
        </form>
    </div>
</body>
</html>
