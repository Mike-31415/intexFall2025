<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit Milestones</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>

    <%- include('partials/header') %>

    <div class="form-card">
        <h2>Edit Milestones</h2>

        <% if (error_message) { %>
            <div class="error-message"><%= error_message %></div>
        <% } %>

        <!--
            EXPECTED DATA PASSED IN:
            milestone = {
                milestoneid,
                participantname,
                milestonetitles,
                milestonedates
            }
        -->

        <form action="/milestones/edit/<%= milestone.milestoneid %>" method="POST">

            <!-- Participant Name (readonly) -->
            <div class="form-row">
                <label>Participant</label>
                <input 
                    type="text" 
                    value="<%= milestone.participantname %>" 
                    readonly
                >
            </div>

            <!-- Milestone Titles (semicolon separated) -->
            <div class="form-row">
                <label for="milestonetitles">Milestone Titles (separated by semicolons)</label>
                <textarea 
                    id="milestonetitles" 
                    name="milestonetitles"
                    rows="3"
                    required
                ><%= milestone.milestonetitles %></textarea>
            </div>

            <!-- Milestone Dates (semicolon separated) -->
            <div class="form-row">
                <label for="milestonedates">Milestone Dates (match title order)</label>
                <textarea 
                    id="milestonedates" 
                    name="milestonedates"
                    rows="3"
                    required
                ><%= milestone.milestonedates %></textarea>
            </div>

            <!-- Save Button -->
            <div class="form-row" style="margin-top: 20px;">
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>

            <!-- Cancel Button -->
            <div class="form-row" style="margin-top: 10px;">
                <a href="/milestones" class="btn btn-secondary">Cancel</a>
            </div>

        </form>
    </div>

</body>
</html>
