<!-- Group 2-11
 
Events page: page that shows a list of the different events available and related information.

-->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Events</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <%- include('partials/header') %>

    <% 
        // Determine if user is an admin
        let isManager = (role === 'admin' || role === 'Admin');
    %>

    <div class="table-card">
        <h1>Event Management</h1>
        <% if (isManager) { %>
            <div class="table-actions">
                <a href="/events/add" class="btn btn-primary">Add Event</a>
            </div>
        <% } %>

        <!-- SEARCH BAR -->
        <form method="GET" action="/events" class="mb-3">
            <div class="search-bar-wrapper" style="display: flex; gap: 8px; flex-wrap: wrap; align-items: center;">
                <input 
                    type="text"
                    name="search"
                    class="form-control"
                    placeholder="Search by event name, type, description, or recurrence..."
                    value="<%= search %>"
                    style="flex: 1; min-width: 250px; border-radius: 8px; height: 35px; padding: 0 12px;"
                />
                <button class="btn btn-secondary" type="submit">Search</button>
                <button class="btn btn-secondary" type="button" onclick="window.location.href='/events'">Clear</button>
            </div>
        </form>

        <table class="event-table table-striped">
            <thead>
                <tr>
                    <th>Event Name</th>
                    <th>Type</th>
                    <th>Description</th>
                    <th>Default Capacity</th>
                    <th>Recurrence</th>

                    <!-- Only show Actions column for admins -->
                    <% if (isManager) { %>
                        <th>Edit</th>
                        <th>Delete</th>
                    <% } %>
                </tr>
            </thead>

            <tbody>
                <% if (events && events.length > 0) { %>
                    <% events.forEach(event => { %>
                        <tr>
                            <td><%= event.eventname %></td>
                            <td><%= event.eventtype %></td>
                            <td><%= event.eventdescription %></td>
                            <td><%= event.eventdefaultcapacity %></td>
                            <td><%= event.eventrecurrencepattern %></td>

                            <!-- Admin-only actions -->
                            <% if (isManager) { %>
                                <td>
                                    <a href="/events/edit/<%= event.eventid %>" class="btn btn-primary btn-sm">Edit</a>
                                </td>
                                <td>
                                    <form action="/events/delete/<%= event.eventid %>" method="POST" style="display:inline;">
                                        <button type="submit" class="btn btn-delete">Delete</button>
                                    </form>
                                </td>
                            <% } %>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="<%= isManager ? 6 : 5 %>" style="text-align:center; padding:20px;">
                            No events available.
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

</body>
</html>
