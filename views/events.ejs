<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Events</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>

    <h1 style="text-align:center;">Event Management</h1>

    <% 
        // FIX: Using participant_role to match the server-side variable name
        // UPDATE: Change check from 'manager' to 'admin'
        let isManager = (participant_role === 'admin' || participant_role === 'Admin' || participant_role === 'A');
    %>

    <% if (isManager) { %>
        <a href="/events/add" class="btn btn-add">Add Event</a>
    <% } %>

    <table class="event-list">
        <thead>
            <tr>
                <th>Event Name</th>
                <th>Type</th>
                <th>Description</th>
                <th>Default Capacity</th>
                <th>Recurrence</th>

                <% if (isManager) { %>
                    <th>Actions</th>
                <% } %>
            </tr>
        </thead>

        <tbody>
            <% if (events && events.length > 0) { %>
                <% events.forEach(event => { %>
                    <tr>
                        <td><%= event.eventname %></td>
                        <td><%= event.eventtype %></td>
                        <td><%= event.eventdescription %></td>
                        <td><%= event.eventdefaultcapacity %></td>
                        <td><%= event.eventrecurrencepattern %></td>

                        <% if (isManager) { %>
                            <td class="actions">
                                <a href="/events/edit/<%= event.eventid %>" class="btn btn-edit">Edit</a>
                                <a href="/events/delete/<%= event.eventid %>" class="btn btn-delete">Delete</a>
                            </td>
                        <% } %>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="<%= isManager ? 6 : 5 %>" style="text-align:center; padding:20px;">
                        No events available.
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>

</body>
</html>