<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Donations List</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>

    <body>
        <div class="container mt-5">

            <h1 class="mb-4">Donations List</h1>

            <!-- MANAGERS SEE ADD BUTTON -->
            <% if (role === "manager") { %>
                <form action="/addDonations" method="GET" class="mb-3">
                    <button class="btn btn-success" type="submit">Add Donation</button>
                </form>
            <% } %>

            <!-- ERROR MESSAGE -->
            <% if (error_message) { %>
                <div class="alert alert-danger">
                    <%= error_message %>
                </div>
            <% } %>

            <!-- NO USERS -->
            <% if (donations.length === 0) { %>
                <div class="alert alert-warning">
                    No donations found in the database.
                </div>
            <% } else { %>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Password</th>
                            <th>Profile Picture</th>
                            
                            <!-- Manager-only columns -->
                            <% if (role === "manager") { %>
                                <th>Edit</th>
                                <th>Delete</th>
                            <% } %>

                        </tr>
                    </thead>

                    <tbody>
                        <% donations.forEach(donation => { %>
                            <tr>
                                <td><%= donation.username %></td>
                                <td><%= donation.password %></td>

                                <td>
                                    <% if (donation.profile_image) { %>
                                        <img src="<%= user.profile_image %>" 
                                             alt="Profile picture" 
                                             style="max-width: 100px;">
                                    <% } else { %>
                                        <span>No image</span>
                                    <% } %>
                                </td>

                                <!-- EDIT: Managers only -->
                                <% if (role === "manager") { %>
                                    <td>
                                        <form action="/editDonations/<%= donation.id %>" method="GET">
                                            <button class="btn btn-primary btn-sm">Edit</button>
                                        </form>
                                    </td>

                                    <!-- DELETE: Managers only -->
                                    <td>
                                        <form action="/deleteDonations/<%= donation.id %>" method="POST">
                                            <button class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </td>
                                <% } %>

                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>

            <a href="/" class="btn btn-primary mt-3">Back to Dashboard</a>
            <a href="/logout" class="btn btn-secondary mt-3">Logout</a>
        </div>
    </body>
</html>
