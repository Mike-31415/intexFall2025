<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Donations List</title>
        <link rel="stylesheet" href="/styles.css">
    </head>

    <body>
        <%- include('partials/header') %>
        <div class="container mt-5">

            <h1 class="mb-4">Donations List</h1>

            <!-- ADMINS SEE ADD BUTTON -->
            <% if (role === "admin") { %>
                <form action="/addDonations" method="GET" class="add-button-bar">
                    <button class="btn btn-primary" type="submit">Add Donation</button>
                </form>
            <% } %>

            <!-- SEARCH BAR -->
            <form method="GET" action="/donations" class="mb-3">
                <div class="search-bar-wrapper" style="display: flex; gap: 8px; flex-wrap: wrap; align-items: center;">
                    <input 
                        type="text"
                        name="search"
                        class="form-control"
                        placeholder="Search by date, amount, first name, or last name..."
                        value="<%= search %>"
                        style="flex: 1; min-width: 250px; border-radius: 8px; height: 35px; padding: 0 12px;"
                    />
                    <button class="btn btn-secondary" type="submit">Search</button>
                    <button class="btn btn-secondary" type="button" onclick="window.location.href='/donations'">Clear</button>
                </div>
            </form>

            <!-- ERROR MESSAGE -->
            <% if (error_message) { %>
                <div class="alert alert-danger">
                    <%= error_message %>
                </div>
            <% } %>

            <!-- NO USERS -->
            <% if (donations.length === 0) { %>
                <div class="alert alert-warning">
                    No donations found in the database.
                </div>
            <% } else { %>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Donation Date</th>
                            <th>Donation Amount</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            
                            <!-- Admin-only columns -->
                            <% if (role === "admin") { %>
                                <th>Edit</th>
                                <th>Delete</th>
                            <% } %>

                        </tr>
                    </thead>

                    <tbody>
                        <% donations.forEach(donation => { %>
                            <tr>
                                <td>
                                    <% if (!donation.donation_date) { %>
                                        <!-- Show empty instead of 1970 -->
                                        <%= "Unkown Date" %>
                                    <% } else { %>
                                        <%= new Date(donation.donation_date).toLocaleDateString("en-US", {
                                            weekday: "long",
                                            month: "long",
                                            day: "numeric",
                                            year: "numeric"
                                        }) %>
                                    <% } %>
                                </td>
                                <td><%= donation.donation_amount %></td>
                                <td><%= donation.first_name %></td>
                                <td><%= donation.last_name %></td>

                                <!-- EDIT: Admins only -->
                                <% if (role === "admin") { %>
                                    <td>
                                        <form action="/editDonations/<%= donation.id %>" method="GET">
                                            <button class="btn btn-primary btn-sm">Edit</button>
                                        </form>
                                    </td>

                                    <!-- DELETE: Admins only -->
                                    <td>
                                        <form action="/deleteDonations/<%= donation.id %>" method="POST">
                                            <button class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </td>
                                <% } %>

                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>

            <a href="/" class="btn btn-primary mt-3">Back to Dashboard</a>
            <a href="/logout" class="btn btn-secondary mt-3">Logout</a>
        </div>
    </body>
</html>
