<!-- Group 2-11
 
Donations page: allows logged-in users to view all donations. Only
amind/managers can edit and delete donations.

-->

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Donations List</title>
        <link rel="stylesheet" href="/styles.css">
    </head>

    <body>
        <%- include('partials/header') %>
        <div class="container mt-5">

            <div class="table-header-row">
                <h1 class="mb-4">Donations List</h1>
                <% if (pagination && pagination.totalPages > 1) { %>
                    <% const searchQS = search ? '&search=' + encodeURIComponent(search) : ''; %>
                    <div class="pagination-top">
                        <div class="pagination">
                            <a class="page-link <%= pagination.page === 1 ? 'disabled' : '' %>"
                               href="?page=<%= pagination.page - 1 %><%= searchQS %>">Previous</a>
                            <span class="page-info">Page <%= pagination.page %> of <%= pagination.totalPages %></span>
                            <a class="page-link <%= pagination.page >= pagination.totalPages ? 'disabled' : '' %>"
                               href="?page=<%= pagination.page + 1 %><%= searchQS %>">Next</a>
                        </div>
                    </div>
                <% } %>
            </div>

            <!-- Logged-in users (admin or participant) can add donations -->
            <% if (role === "admin" || role === "participant") { %>
                <form action="/addDonations" method="GET" class="add-button-bar">
                    <button class="btn btn-primary" type="submit">Add Donation</button>
                </form>
            <% } %>

            <!-- SEARCH BAR -->
            <form method="GET" action="/donations" class="mb-3">
                <div class="search-bar-wrapper" style="display: flex; gap: 8px; flex-wrap: wrap; align-items: center;">
                    <input 
                        type="text"
                        name="search"
                        class="form-control"
                        placeholder="Search by date, amount, first name, or last name..."
                        value="<%= search %>"
                        style="flex: 1; min-width: 250px; border-radius: 8px; height: 35px; padding: 0 12px;"
                    />
                    <button class="btn btn-secondary" type="submit">Search</button>
                    <button class="btn btn-secondary" type="button" onclick="window.location.href='/donations'">Clear</button>
                </div>
            </form>

            <!-- ERROR MESSAGE -->
            <% if (error_message) { %>
                <div class="alert alert-danger">
                    <%= error_message %>
                </div>
            <% } %>

            <!-- NO USERS -->
            <% if (donations.length === 0) { %>
                <div class="alert alert-warning">
                    No donations found in the database.
                </div>
            <% } else { %>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Donation Date</th>
                            <th>Donation Amount</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            
                            <!-- Admin-only columns -->
                            <% if (role === "admin") { %>
                                <th>Edit</th>
                                <th>Delete</th>
                            <% } %>

                        </tr>
                    </thead>

                    <tbody>
                        <% donations.forEach(donation => { %>
                            <tr>
                                <td>
                                    <% if (!donation.donation_date) { %>
                                        <!-- Show empty instead of 1970 -->
                                        <%= "Unkown Date" %>
                                    <% } else { %>
                                        <%= new Date(donation.donation_date).toLocaleDateString("en-US", {
                                            month: "long",
                                            day: "numeric",
                                            year: "numeric"
                                        }) %>
                                    <% } %>
                                </td>
                                <td><%= donation.donation_amount %></td>
                                <td><%= donation.first_name %></td>
                                <td><%= donation.last_name %></td>

                                <!-- EDIT: Admins only -->
                                <% if (role === "admin") { %>
                                    <td>
                                        <form action="/editDonations/<%= donation.id %>" method="GET">
                                            <button class="btn btn-primary btn-sm">Edit</button>
                                        </form>
                                    </td>

                                    <!-- DELETE: Admins only -->
                                    <td>
                                        <form action="/deleteDonations/<%= donation.id %>" method="POST">
                                            <button 
                                                class="btn btn-danger btn-sm"
                                                type="button"
                                                data-name="<%= donation.first_name + ' ' + donation.last_name %>"
                                                onclick="openDonationDeletePopup(this.form, this.dataset.name)">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                <% } %>

                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>

            <div class="table-footer">
                <div class="footer-left">
                    <% if (pagination && pagination.totalPages > 1) { %>
                        <% const searchQS = search ? '&search=' + encodeURIComponent(search) : ''; %>
                        <div class="pagination">
                            <a class="page-link <%= pagination.page === 1 ? 'disabled' : '' %>"
                               href="?page=<%= pagination.page - 1 %><%= searchQS %>">Previous</a>
                            <span class="page-info">Page <%= pagination.page %> of <%= pagination.totalPages %></span>
                            <a class="page-link <%= pagination.page >= pagination.totalPages ? 'disabled' : '' %>"
                               href="?page=<%= pagination.page + 1 %><%= searchQS %>">Next</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="simple-overlay" id="donation-delete-popup">
            <div class="simple-dialog">
                <h3>Delete this donation?</h3>
                <p id="donation-delete-text">Are you sure you want to delete this donation?</p>
                <div class="simple-dialog__actions">
                    <button type="button" class="btn btn-secondary" onclick="closeDonationDeletePopup()">Cancel</button>
                    <button type="button" class="btn btn-danger" id="donation-confirm-delete">Yes, delete</button>
                </div>
            </div>
        </div>

        <script>
            var pendingDonationDeleteForm = null;
            var donationDeletePopup = document.getElementById('donation-delete-popup');
            var donationDeleteText = document.getElementById('donation-delete-text');
            var donationConfirmBtn = document.getElementById('donation-confirm-delete');

            function openDonationDeletePopup(form, displayName) {
                pendingDonationDeleteForm = form;
                var name = (displayName || '').trim();
                if (donationDeleteText) {
                    donationDeleteText.textContent = name
                        ? 'Delete donation from ' + name + ' ?'
                        : 'Are you sure you want to delete this donation?';
                }
                if (donationDeletePopup) {
                    donationDeletePopup.classList.add('is-visible');
                }
            }

            function closeDonationDeletePopup() {
                pendingDonationDeleteForm = null;
                if (donationDeletePopup) {
                    donationDeletePopup.classList.remove('is-visible');
                }
            }

            if (donationConfirmBtn) {
                donationConfirmBtn.addEventListener('click', function() {
                    if (pendingDonationDeleteForm) {
                        pendingDonationDeleteForm.submit();
                    }
                    closeDonationDeletePopup();
                });
            }

            if (donationDeletePopup) {
                donationDeletePopup.addEventListener('click', function(e) {
                    if (e.target === donationDeletePopup) {
                        closeDonationDeletePopup();
                    }
                });
            }

            window.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    closeDonationDeletePopup();
                }
            });
        </script>
    </body>
</html>
