<!-- Group 2-11
 
Milestones page: This page shows all the participants and the milestones related to
them. Admin/managers can edit and delete participants and milestones.

-->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Milestones</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <%- include('partials/header') %>
        <div class="container mt-5">

            <!-- Creation of table -->
            <div class="table-header-row">
                <h1 class="mb-4">Milestones</h1>
                <% if (pagination && pagination.totalPages > 1) { %>
                    <% const searchQS = search ? '&search=' + encodeURIComponent(search) : ''; %>
                    <div class="pagination-top">
                        <div class="pagination">
                            <a class="page-link <%= pagination.page === 1 ? 'disabled' : '' %>"
                               href="?page=<%= pagination.page - 1 %><%= searchQS %>">Previous</a>
                            <span class="page-info">Page <%= pagination.page %> of <%= pagination.totalPages %></span>
                            <a class="page-link <%= pagination.page >= pagination.totalPages ? 'disabled' : '' %>"
                               href="?page=<%= pagination.page + 1 %><%= searchQS %>">Next</a>
                        </div>
                    </div>
                <% } %>
            </div>

        <!-- Admin-only Add button -->
        <% if (isManager) { %>
            <div class="table-actions">
                <a href="/milestones/add" class="btn btn-primary">Add Milestones</a>
            </div>
        <% } %>

        <!-- SEARCH BAR -->
        <form method="GET" action="/milestones" class="mb-3">
            <div class="search-bar-wrapper" style="display: flex; gap: 8px; flex-wrap: wrap; align-items: center;">
                <input 
                    type="text"
                    name="search"
                    class="form-control"
                    placeholder="Search by name or milestone"
                    value="<%= search %>"
                    style="flex: 1; min-width: 250px; border-radius: 8px; height: 35px; padding: 0 12px;"
                />
                <button class="btn btn-secondary" type="submit">Search</button>
                <button class="btn btn-secondary" type="button" onclick="window.location.href='/milestones'">Clear</button>
            </div>
        </form>

        <table class="event-table table-striped">
            <thead>
                <tr>
                    <th>Participant</th>
                    <th>Milestone Titles</th>
                    <th>Milestone Dates</th>
                    <% if (isManager) { %>
                        <th>Edit</th>
                        <th>Delete</th>
                    <% } %>
                </tr>
            </thead>

            <tbody>
                <% if (milestones && milestones.length > 0) { %>
                    <% milestones.forEach(m => { %>
                        <tr>
                            <td><%= m.participant_name %></td>
                            <td><%= m.milestone_title %></td>
                            <td>
                                <%= m.milestone_date 
                                    ? new Date(m.milestone_date).toLocaleDateString("en-US", { 
                                        year: "numeric", 
                                        month: "long", 
                                        day: "numeric" 
                                    }) 
                                    : "" %>
                            </td>


                            <% if (isManager) { %>
                                <td>
                                    <a href="/milestones/edit/<%= m.milestone_id %>" class="btn btn-primary btn-sm">
                                        Edit
                                    </a>
                                </td>
                                <td>
                                    <form action="/milestones/delete/<%= m.milestone_id %>" method="POST" style="display:inline;">
                                        <button 
                                            type="button" 
                                            class="btn btn-danger"
                                            data-title="<%= m.milestone_title %>"
                                            data-participant="<%= m.participant_name %>"
                                            onclick="openMilestoneDeletePopup(this.form, this.dataset.title, this.dataset.participant)">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            <% } %>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="<%= isManager ? 4 : 3 %>" class="text-center">
                            No milestones found.
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <div class="table-footer">
            <div class="footer-left">
                <% if (pagination && pagination.totalPages > 1) { %>
                    <div class="pagination">
                        <a class="page-link <%= pagination.page === 1 ? 'disabled' : '' %>"
                           href="?page=<%= pagination.page - 1 %>">Previous</a>
                        <span class="page-info">Page <%= pagination.page %> of <%= pagination.totalPages %></span>
                        <a class="page-link <%= pagination.page >= pagination.totalPages ? 'disabled' : '' %>"
                           href="?page=<%= pagination.page + 1 %>">Next</a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <div class="simple-overlay" id="milestone-delete-popup">
        <div class="simple-dialog">
            <h3>Delete this milestone?</h3>
            <p id="milestone-delete-text">Are you sure you want to delete this milestone?</p>
            <div class="simple-dialog__actions">
                <button type="button" class="btn btn-secondary" onclick="closeMilestoneDeletePopup()">Cancel</button>
                <button type="button" class="btn btn-danger" id="milestone-confirm-delete">Yes, delete</button>
            </div>
        </div>
    </div>

    <script>
        var pendingMilestoneDeleteForm = null;
        var milestoneDeletePopup = document.getElementById('milestone-delete-popup');
        var milestoneDeleteText = document.getElementById('milestone-delete-text');
        var milestoneConfirmBtn = document.getElementById('milestone-confirm-delete');

        function openMilestoneDeletePopup(form, title, participant) {
            pendingMilestoneDeleteForm = form;
            var titleText = (title || '').trim();
            var participantText = (participant || '').trim();
            if (milestoneDeleteText) {
                if (titleText && participantText) {
                    milestoneDeleteText.textContent = 'Delete "' + titleText + '" for ' + participantText + '?';
                } else if (titleText) {
                    milestoneDeleteText.textContent = 'Delete "' + titleText + '"?';
                } else {
                    milestoneDeleteText.textContent = 'Are you sure you want to delete this milestone?';
                }
            }
            if (milestoneDeletePopup) {
                milestoneDeletePopup.classList.add('is-visible');
            }
        }

        function closeMilestoneDeletePopup() {
            pendingMilestoneDeleteForm = null;
            if (milestoneDeletePopup) {
                milestoneDeletePopup.classList.remove('is-visible');
            }
        }

        if (milestoneConfirmBtn) {
            milestoneConfirmBtn.addEventListener('click', function() {
                if (pendingMilestoneDeleteForm) {
                    pendingMilestoneDeleteForm.submit();
                }
                closeMilestoneDeletePopup();
            });
        }

        if (milestoneDeletePopup) {
            milestoneDeletePopup.addEventListener('click', function(e) {
                if (e.target === milestoneDeletePopup) {
                    closeMilestoneDeletePopup();
                }
            });
        }

        window.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeMilestoneDeletePopup();
            }
        });
    </script>
</body>
</html>
